{
    "name": "Reminder Backend Dev Container",
    "build": {
        "dockerfile": "../Dockerfile.dev",
        "context": ".."
    },
    "workspaceFolder": "/workspaces/reminder_backend",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/reminder_backend,type=bind,consistency=cached",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode-remote.remote-containers",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black"
            }
        }
    },
    "portsAttributes": {
        "8000": {
            "label": "FastAPI",
            "onAutoForward": "notify"
        }
    },
    "forwardPorts": [8000],
    "remoteUser": "vscode",
    "postCreateCommand": "pip install --no-cache-dir -r requirements.txt && git config --global user.name 'samuel1544' && git config --global user.email 'samuel.charlessamuel03@gmail.com'"
}